{
  "manifest_version": 2,
  "name": "NadeCon",
  "version": "1.0.0",
  "description": "Detects media from pages and connects to Nadeko Downloader",
  "icons": {
    "96": "icons/nadecon-96.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "contextMenus",
    "*://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["popup/popup.js"],
    "run_at": "document_idle"
  }],
  "browser_specific_settings": {
  "gecko": {
    "id": "glicole@nadecon",
    "strict_min_version": "58.0"
  }
}
}
